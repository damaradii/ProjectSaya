<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BusActivity"
    android:background="@color/white">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentBus"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnrabu" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#399DC0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Yogyakarta - Wates"
            android:textColor="@color/white"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnsenin"
        android:layout_width="104dp"
        android:layout_height="63dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Senin"
        android:gravity="center_horizontal"
        android:textColor="@color/font"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"></Button>

    <Button
        android:id="@+id/btnrabu"
        android:layout_width="104dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/button"
        android:text="rabu"
        android:textColor="@color/font"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"></Button>

    <Button
        android:id="@+id/btnselasa"
        android:layout_width="104dp"
        android:layout_height="63dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button"
        android:text="Selasa"
        android:textColor="@color/font"
        android:textSize="15sp"
        android:gravity="center_horizontal"
        app:layout_constraintEnd_toStartOf="@+id/btnrabu"
        app:layout_constraintStart_toEndOf="@+id/btnsenin"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"></Button>

    <TextView
        android:id="@+id/textsenin"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:text="16"
        android:textColor="@color/font"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnsenin"
        app:layout_constraintEnd_toEndOf="@+id/btnsenin"
        app:layout_constraintStart_toStartOf="@+id/btnsenin" />

    <TextView
        android:id="@+id/textselasa"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:text="17"
        android:textColor="@color/font"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnselasa"
        app:layout_constraintEnd_toEndOf="@+id/btnselasa"
        app:layout_constraintStart_toStartOf="@+id/btnselasa" />

    <TextView
        android:id="@+id/textrabu"
        android:layout_width="32dp"
        android:layout_height="34dp"
        android:layout_marginBottom="8dp"
        android:text="18"
        android:textColor="@color/font"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnrabu"
        app:layout_constraintEnd_toEndOf="@+id/btnrabu"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="@+id/btnrabu" />


</androidx.constraintlayout.widget.ConstraintLayout>